<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="large-6 small-12 columns text-center">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :category %>
      <%= f.collection_select :category_id, @categories, :id, :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
  </div>

  <div class="large-6 small-12 columns text-center">
    <div class="field">
      <%= f.label :display_image %>
      <%= f.file_field :display_image %>
    </div>
    <div class="field">
      <%= f.label :image_1 %>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :image_2 %>
      <%= f.file_field :image2 %>
    </div>
    <div class="field">
      <%= f.label :image_3 %>
      <%= f.file_field :image3 %>
    </div>
    <div class="field">
      <%= f.label :image_4 %>
      <%= f.file_field :image4 %>
    </div>
  </div>
  <div class="large-12 text-center">
    <div class="actions">
      <%= f.submit class:"button" %>
    </div>
  </div>
<% end %>
