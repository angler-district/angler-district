<p id="notice"><%= notice %></p>

<div class="row">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <%if signed_in? && current_user.id == @product.user_id %>
    <%= link_to 'Edit', edit_product_path(@product) %>
  <% elsif signed_in? %>
    <%= link_to "", class: "button", data: {target: @cart_action,
        addUrl: add_to_cart_path(@product),
        removeUrl: remove_from_cart_path(@product)} do %>
      <% if @cart_action == 'Remove from' %>
        <i class="fa fa-times"></i>
      <% else %>
        <i class="fa fa-shopping-cart"></i>
      <% end %>
      <span><%=@cart_action%></span> Cart
    <%end%>
  <%end%>
</div>
