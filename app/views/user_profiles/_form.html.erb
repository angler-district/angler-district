<%= form_for(@user, :url => url_for(:controller => locals[:controller], :action => locals[:action]), html: {class: ""} ) do |f| -%>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user profile from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="large-4 small-12 columns">
    <div class="field">
      <%= f.label :profile_name %>
      <%= f.text_field :profile_name %>
    </div>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <p>PayPal account email the same as above?</p>
    <div class="switch large">
      <% if @user.paypal_email_the_same == true %>
        <input class="switch-input" id="paypal_email_the_same" type="checkbox" name="user[paypal_email_the_same]" value="false">
        <label class="switch-paddle" for="paypal_email_the_same">
          <span class="show-for-sr">PayPal email?</span>
          <span class="switch-inactive" aria-hidden="true">Yes</span>
          <span class="switch-active" aria-hidden="true">No</span>
          </label>
      <% else %>
        <input class="switch-input" id="paypal_email_the_same" type="checkbox" name="user[paypal_email_the_same]" value="true">
        <label class="switch-paddle" for="paypal_email_the_same">
          <span class="show-for-sr">PayPal email?</span>
          <span class="switch-active" aria-hidden="true">Yes</span>
          <span class="switch-inactive" aria-hidden="true">No</span>
        </label>
      <% end %>
    </div>

  </div>

  <div class="large-4 small-12 columns">
    <div class="field">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
    </div>

    <div class="field">
      <%= f.label :address2 %>
      <%= f.text_field :address2 %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
    </div>
  </div>

  <div class="large-4 small-12 columns text-center">
    <div class="actions">
      <%= f.submit class:"button", id: "profile-button" %>
    </div>

    <%= link_to "Back to My Profile", user_profile_path, class:"button", id: "profile-button" %>
  </div>
<% end %>
