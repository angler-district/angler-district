<p id="notice"><%= notice %></p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>City:</strong>
  <%= @order.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @order.state %>
</p>

<ul>
  <% @cart_products.each do |product| %>
    <li>
      <%= product.name %> - $<%= Money.new(product.price) * 100 %>
    </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_order_path(@order) %> |
