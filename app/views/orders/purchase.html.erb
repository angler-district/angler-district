<div class="row font-color">
  <div class="row align-center">
    <div class="column large-4 text-center one-form">
      <h2>Shipping Information</h2>
      <p>
        Name: <%= @order.first_name %> <%= @order.last_name %>
      </p>
      <p>
        Email: <%= @order.buyer.email %>
      </p>
      <p>
        Address: <%= @order.address1 %> <%= @order.address2 %>
      </p>
      <p>
        City, State, Zip: <%= @order.city %>, <%= @order.state %> <%= @order.zip_code %>
      </p>
      <%= link_to 'Edit', edit_order_path(@order), class: "button", id: "one-edit" %>
    </div>
    <div class="column large-8 text-center">
      <div class="column large-12">
        <h3>Choose Payment Method</h3>
        <div class="payment-method">
          <div class="large-6 columns">
            <div class="cc-payment-one">
              <i class="fa fa-4x fa-credit-card" aria-hidden="true"></i>
              <div class="stripe-button" id="stripe-button">
                <%= form_tag charged_order_path(@order) do %>
                  <article>
                    <% if flash[:error].present? %>
                      <div id="error_explanation">
                        <p><%= flash[:error] %></p>
                      </div>
                    <% end %>
                  </article>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Angler District - Tackle"
                          data-amount="<%= @total %>"
                          data-locale="auto">
                  </script>
                <% end %>
              </div>
            </div>
          </div>
          <div class="large-6 columns">
            <div class="paypal-one" id="paypal">
              <i class="fa fa-3x fa-paypal" aria-hidden="true"></i>
              <div class="paypal-button-one">
                <%= link_to image_tag("https://www.paypalobjects.com/webstatic/en_US/i/btn/png/silver-pill-paypal-44px.png"), paypal_create_path(@order) %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="column large-12">
        <h2>
          Order Details
        </h2>
        <h5>
          Total - <%= number_to_currency(@total/100.0) %>
        </h5>
        <h5>
          Item Count - 1
        </h5>
        <span style="color: #2c3e50;">(Refresh the page to see an updated total and item count if you remove an item from your cart on this page.)</span>
        <div class="large-12 columns text-center">
          <div class="cart-box-one">
            <span id="cart-item-go">
              <%= link_to product_path(@order.product) do %>
                <%= image_tag(@order.product.image.thumb) %>
              <% end %>
            </span>
            <span>
              <h4><%= link_to @order.product.name, product_path(@order.product), id: "title-link-go" %></h4>
              <h6><%= number_to_currency(@order.product.price_in_cents/100.0) %></h6>
              <p>
                Seller: <%= @order.product.user.profile_name %>
              </p>
            </span>
            <span>
              <%= link_to "", id: "purchase-button", data: {target: @order.product.cart_action(current_user.try :id), addUrl: add_to_cart_path(@order.product), removeUrl: remove_from_cart_path(@order.product)} do %>
                <% if @order.product.cart_action(current_user.try :id) == 'Remove from' %>
                  <i class="fa fa-times"></i>
                  <span><%=@order.product.cart_action(current_user.try :id)%></span> Cart
                <% else %>
                  <i class="fa fa-shopping-cart"></i>
                  <span><%=@order.product.cart_action(current_user.try :id)%></span> <span>Cart</span>
                <% end %>
              <%end%>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
