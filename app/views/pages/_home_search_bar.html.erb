          <div class="input-group">
            <%= text_field_tag :search_text, "", placeholder: "Find Tackle", class:"input-group-field", id: "search-input" %>
            <div class="input-group-button">
              <%= submit_tag "Search", class: "button search-button", id: "search-button" %>
            </div>
          </div>
        <% end %>

