<div class="home-search-bar text-center">
  <div class="row expanded">
    <div class="large-12 columns">

      <div class="large-4 columns text-right home-bar-buttons hide-for-small-only hide-for-medium-only">
        <%= link_to "Reels", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
        <%= link_to "Rods", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
