<div class="home-search-bar text-center">
  <div class="row expanded">
    <div class="large-12 columns">

      <div class="large-4 columns text-right home-bar-buttons hide-for-small-only hide-for-medium-only">
        <%= link_to "Reels", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
        <%= link_to "Rods", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
        <%= link_to "Lures", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
      </div>

      <div class="large-4 medium-12 columns home-search-bar-input">
        <%= form_tag products_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search_text, "", placeholder: "Find Tackle", class:"input-group-field", id: "search-input" %>
            <div class="input-group-button">
              <%= submit_tag "Search", class: "button search-button", id: "search-button" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="large-4 columns text-left home-bar-buttons hide-for-small-only hide-for-medium-only">
        <%= link_to "Apparel", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
        <%= link_to "Boating", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
        <%= link_to "Electronics", products_path, class: "button search-bar-button", id: "sb-cat-button" %>
      </div>

    </div>
  </div>
</div>
