<div class="row">
  <div class="large-12 columns">
    <%= form_for(order) do |f| %>
      <% if order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
          <ul>
          <% order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :tracking_number %>
        <%= f.text_field :tracking_number, class: "rounded-input" %>
      </div>
      <div class="field">
        <%= f.label :carrier %>
        <%= f.text_field :carrier, class: "rounded-input" %>
      </div>
      <div class="actions hide-for-small-only product-submit">
        <%= f.submit class:"button wide-button" %>
      </div>
    <% end %>
  </div>
</div>
