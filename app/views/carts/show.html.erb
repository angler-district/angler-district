<div id="mycart" class="small-10 small-centered medium-8 large-8 column">
  <div class="p1 glassy-bg mb1 text-center radius-l1 radius-r1">
    <h4>My Cart</h4>
    <p class="mb0"> You've selected <span class="cart-count"><%=current_user.cart_count%></span> products!</p>
  </div>

  <% @cart_products.each do |product| %>
    <div data-equalizer class="cart-product large-12 column mb1">
      <div class="column large-2 text-center p0" data-equalizer-watch>
        <%=link_to product do%>
          <h5><%= product.name%></h5>
        <%end%>
      </div>
      <div class="column large-7 glassy-bg text-center" data-equalizer-watch>
        <h5 class="scale">$ <%= product.price %></h5>
      </div>
      <div class="column large-3 primary-bg text-center radius-r1" data-equalizer-watch>
        <%if signed_in?%>
          <%=link_to "", class: "button", data: {target: product.cart_action(current_user.try :id), addUrl: add_to_cart_path(product), removeUrl: remove_from_cart_path(product)} do%>
            <i class="fa fa-times"></i>
            <span><%=product.cart_action(current_user.try :id)%></span> Cart
          <%end%>
        <%end%>
      </div>
    </div>
  <%end%>
  <div id="purchase-button" class="large-12 large-centered column">
    <%if signed_in?%>
      <% if @cart_ids.count >= 1 %>
        <%= link_to 'Purchase Order', route_order_path, class: "button success" %>
      <% end %>
    <% end %>
  </div>
</div>
